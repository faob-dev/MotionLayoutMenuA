<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/motion_container"
        app:layoutDescription="@xml/motion_scene">

    <View
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:id="@+id/c1"
            android:background="#FFFCF4BD"
            android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/c2"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:id="@+id/c2"
            android:background="#FFFCF4BD"
            android:layout_marginTop="104dp"
            app:layout_constraintStart_toEndOf="@+id/c1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:id="@+id/c3"
            android:background="#FFFCF4BD"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/c4"
            app:layout_constraintTop_toBottomOf="@+id/c1"/>
    <View
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:id="@+id/c4"
            android:background="#FFFCF4BD"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/c3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c2"/>

    <android.support.v7.widget.CardView
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="142dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#D77FFA">
        <TextView
                android:id="@+id/t1"
                android:text="SERVICES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:textColor="@android:color/background_light" android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold" android:textStyle="bold"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="142dp"
            android:backgroundTint="#FF7062"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="142dp">
        <TextView
                android:text="AUTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:textColor="@android:color/background_light" android:textSize="20sp" android:textStyle="bold"
                android:fontFamily="@font/open_sans_bold"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="142dp"
            android:backgroundTint="#95C323"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="284dp">
        <TextView
                android:text="JOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:textColor="@android:color/background_light" android:textSize="20sp" android:textStyle="bold"
                android:fontFamily="@font/open_sans_bold"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/v4"
            android:layout_width="0dp"
            android:layout_height="142dp"
            android:backgroundTint="#11A2FD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="426dp">
        <TextView
                android:text="REALTY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:textColor="@android:color/background_light" android:textSize="20sp" android:textStyle="bold"
                android:fontFamily="@font/open_sans_bold"/>
    </android.support.v7.widget.CardView>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/ic1"
            android:tint="#ffffffff"
            android:elevation="24dp"
            android:rotation="90"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/v1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="@+id/v1" android:alpha="0"/>
</android.support.constraint.motion.MotionLayout>